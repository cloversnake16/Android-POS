<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="440dp"
    android:layout_height="wrap_content"
    android:background="@drawable/login_activity_border"
    android:orientation="vertical"
    android:paddingStart="36dp"
    android:paddingEnd="42dp"
    android:paddingTop="34dp"
    android:paddingBottom="36dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center">

    <!-- TODO: set linearlayout width to dynamic value -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/account_dialog_form_username_hint"
        android:textAllCaps="true"
        android:textColor="@color/tv_background_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/account_dialog_form_username"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/account_edittext"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textColor="@color/et_orange"
            android:textCursorDrawable="@null">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/account_dialog_form_password_hint"
        android:textAllCaps="true"
        android:textColor="@color/tv_background_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp">

            <EditText
                android:id="@+id/account_dialog_form_password"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/account_edittext"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textColor="@color/et_orange"
                android:textCursorDrawable="@null" />

            <ImageView
                android:id="@+id/account_action_masking"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/password_mask" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/account_dialog_form_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/account_dialog_form_license_hint"
        android:textAllCaps="true"
        android:textColor="@color/tv_background_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/account_dialog_form_license"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/account_edittext"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textColor="@color/et_orange"
            android:textCursorDrawable="@null" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/account_action_remember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:text="@string/account_dialog_button_remember"
        android:textAllCaps="true"
        android:textColor="@color/tv_background_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <!--
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_lock" />

            <ProgressBar
                android:id="@+id/account_dialog_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="@string/account_dialog_ssl"
            android:textAllCaps="true"
            android:textColor="@color/tv_background_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_version"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="8dp"
            android:textAllCaps="true"
            android:textColor="#414141"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_action_authenticate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/account_dialog_button"
            android:gravity="center"
            android:text="@string/account_dialog_button_positive"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_action_update"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_account_update"
            android:gravity="center"
            android:text="@string/update"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>