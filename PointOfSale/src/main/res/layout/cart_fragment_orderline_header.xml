<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bar_height">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:background="@drawable/gray_bar_border">

        <TextView
                android:id="@+id/tvNameHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/product"
                style="@style/orderlineTextSub"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:textAllCaps="true"/>

        <TextView
                android:id="@+id/tvQuantityHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/qty"
                style="@style/orderlineTextSub"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textAllCaps="true"/>

        <TextView
                android:id="@+id/tvPriceHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/price"
                style="@style/orderlineTextSub"
                android:paddingEnd="10dp"
                android:gravity="end|center_vertical"
                android:layout_weight="2"
                android:textAllCaps="true"/>

        <TextView
                android:id="@+id/tvTotalLinePriceHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/order_sum_header"
                style="@style/orderlineTextSub"
                android:paddingEnd="10dp"
                android:gravity="end|center_vertical"
                android:layout_weight="2"
                android:textAllCaps="true"/>

    </LinearLayout>

</LinearLayout>