<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

    <GridLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6"
            android:padding="20dp"
            android:layout_gravity="center">

        <TextView
                android:text="@string/shop_issued"
                android:textSize="14sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="50dp"/>

        <TextView
                android:id="@+id/etShopIssued"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:layout_marginStart="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/gift_cart_id"
                android:labelFor="@+id/giftCardIdText"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0" />

        <TextView
                android:id="@+id/giftCardIdText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|start"
                android:textAlignment="center"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="start"
                android:paddingStart="10dp"
                android:layout_marginStart="10dp"
        />

        <TextView
                android:text="@string/issued_by"
                android:textSize="14sp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="50dp"/>

        <TextView
                android:id="@+id/etIssuedBySeller"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="200dp"
                android:paddingStart="10dp"
                android:layout_marginStart="10dp"
        />

        <TextView
                android:text="@string/issued_date"
                android:textSize="14sp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="50dp"/>

        <TextView
                android:id="@+id/tvIssueDate"
                android:layout_height="50dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_width="200dp"
                android:paddingStart="10dp"
                android:layout_marginStart="10dp"
        />

        <TextView
                android:text="@string/amount_on_card"
                android:textSize="14sp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:labelFor="@+id/giftCardAmountText"
                android:layout_height="50dp"
                android:gravity="center_vertical"
        />

        <TextView
                android:id="@+id/giftCardFullAmountText"
                android:layout_height="50dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_width="200dp"
                android:paddingStart="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
        />

        <TextView
                android:text="@string/amount_to_use"
                android:textSize="14sp"
                android:layout_row="5"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:labelFor="@+id/giftCardAmountText"
                android:textStyle="bold"
                android:layout_height="50dp"/>

        <EditText
                android:id="@+id/giftCardAmountText"
                android:layout_height="50dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_width="200dp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="top"
                android:gravity="top"
        />


    </GridLayout>
</RelativeLayout>