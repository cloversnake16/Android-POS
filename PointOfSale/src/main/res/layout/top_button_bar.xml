<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bar_tall_height_plus_one"
              android:background="@color/bar_border_color_lighter"
              >

    <RadioGroup
            android:id="@+id/toggleGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ToggleButton
                android:id="@+id/toggle_btn_scan"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textOn="@string/scan"
                android:textOff="@string/scan"
                android:onClick="onToggle"
                android:checked="true"
                android:background="@drawable/top_bar_blue_selector"
                android:textColor="#FFF"
                android:textAllCaps="true"
                android:layout_marginEnd="1dp"/>

        <ToggleButton
                android:id="@+id/toggle_btn_browse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textOn="@string/browse"
                android:textOff="@string/browse"
                android:onClick="onToggle"
                android:background="@drawable/top_bar_blue_selector"
                android:textColor="#FFF"
                android:textAllCaps="true"
                android:layout_marginEnd="1dp"/>

        <ToggleButton
                android:id="@+id/toggle_btn_search"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textOn="@string/search"
                android:textOff="@string/search"
                android:onClick="onToggle"
                android:background="@drawable/top_bar_blue_selector"
                android:textColor="#FFF"
                android:textAllCaps="true"
                android:layout_marginEnd="1dp"/>

        <ToggleButton
                android:id="@+id/toggle_btn_edit"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textOn="@string/edit"
                android:textOff="@string/edit"
                android:onClick="onToggle"
                android:background="@drawable/top_bar_blue_selector"
                android:textColor="#FFF"
                android:textAllCaps="true" />

        <ToggleButton
                android:id="@+id/toggle_btn_orders"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:textOn="@string/orders"
                android:textOff="@string/orders"
                android:onClick="onToggle"
                android:background="@drawable/top_bar_blue_selector"
                android:textColor="#FFF" />
    </RadioGroup>

</LinearLayout>