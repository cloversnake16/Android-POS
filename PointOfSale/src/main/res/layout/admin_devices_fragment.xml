<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="10">

    <LinearLayout
            android:id="@+id/admin_label_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:background="@drawable/toolbar_border"
            android:layout_weight="1">

        <TextView
                android:id="@+id/label_admin_device_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/device_type"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/label_admin_device_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/device"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/label_admin_device_provider"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/device_provider"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/label_admin_device_ip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="IP"
                android:textSize="16sp" />

    </LinearLayout>

    <ListView
            android:id="@+id/admin_device_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="8"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="8dp"
    android:layout_weight="1">

        <Button
                android:id="@+id/btnSaveDevices"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/image_wizard_action_save"
                android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>