<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/include_icon_holder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <no.susoft.mobile.pos.ui.slidemenu.StateAwareTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:gravity="start"
            android:textAppearance="?attr/snvSubheaderItemTextAppearance"
            app:saTextAppearance="@style/SnvDefaultSubheaderItemTextAppearance"
            android:maxLines="1"
            android:ellipsize="end"/>

        <no.susoft.mobile.pos.ui.slidemenu.StateAwareTextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:gravity="start"
            android:textAppearance="?attr/snvSubheaderHintTextAppearance"
            app:saTextAppearance="@style/SnvDefaultSubheaderHintTextAppearance"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/expand_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Expand/Collapse"/>

</merge>